<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true">
        <shape>
            <corners
                android:radius="@dimen/sm_10" />
            <gradient
                android:startColor="#ffff772d"
                android:endColor="#ffffc41c"
                android:angle="0.0" />
            <stroke
                android:width="@dimen/sm_2"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:state_selected="true">
        <shape>
            <corners
                android:radius="@dimen/sm_10" />
            <gradient
                android:startColor="#ffff772d"
                android:endColor="#ffffc41c"
                android:angle="0.0" />
            <stroke
                android:width="@dimen/sm_2"
                android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="@dimen/sm_10" />
            <solid
                android:color="#40ffffff" />
        </shape>
    </item>
</selector>