<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层蓝色边框 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" />
        </shape>
    </item>
    <!-- 内层黑色背景，留出边框空间 -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>
</layer-list>
