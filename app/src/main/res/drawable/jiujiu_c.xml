<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners
                android:radius="@dimen/sm_0" />
            <gradient
                android:startColor="#FA2196F3"
                android:endColor="#FA2196F3"
                android:angle="0.0" />
            <stroke
                android:width="@dimen/sm_2"
                android:color="@color/white" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners
                android:radius="@dimen/sm_0" />
            <gradient
                android:startColor="#FA2196F3"
                android:endColor="#FA2196F3"
                android:angle="0.0" />
            <stroke
                android:width="@dimen/sm_2"
                android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/sm_3" android:color="#ffffff"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</selector>