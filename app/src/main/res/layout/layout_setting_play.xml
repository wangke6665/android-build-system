<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sm_12"
        android:paddingTop="@dimen/sm_16"
        android:paddingRight="@dimen/sm_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sm_2"
            android:text="@string/Playback_Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/sm_46"/>

        <ImageView
            android:layout_width="@dimen/sm_10"
            android:layout_height="@dimen/sm_70"
            android:layout_marginLeft="@dimen/sm_10"
            android:src="@drawable/vod_line35" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/sm_850"
        android:layout_height="@dimen/sm_550"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingTop="@dimen/sm_50">

        <RelativeLayout
            android:id="@+id/play_setting_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/play_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/play_setting_top">

            <!--点播内核-->
            <RelativeLayout
                android:id="@+id/play_setting_content_core"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_core"
                android:paddingBottom="@dimen/sm_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_core"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />
                <ImageButton
                    android:id="@+id/play_setting_content_core_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_core_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_core_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_core_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_core_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>
            <!--直播内核-->
            <RelativeLayout
                android:id="@+id/play_setting_content_live_core"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_core"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_live_core"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_live_core"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_live_core_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_live_core_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_live_core_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_live_core_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_live_core_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>
            <!--解码器-->
            <RelativeLayout
                android:id="@+id/play_setting_content_decode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_live_core"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_decode"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_decode"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_decode_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_decode_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_decode_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_decode_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_decode_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>

            <!--画面比例-->
            <RelativeLayout
                android:id="@+id/play_setting_content_playratio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_decode"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_playratio"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_playratio"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_playratio_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_playratio_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_playratio_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_playratio_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_playratio_text"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>

            <!--跳过片头-->
            <RelativeLayout
                android:id="@+id/play_setting_content_jump"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_playratio"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_jump"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_jump"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_jump_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_jump_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_jump_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_jump_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_jump_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>

            <!--跳过片尾-->
            <RelativeLayout
                android:id="@+id/play_setting_content_jump_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_jump"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_jump_end"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/play_setting_jump_end"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_jump_end_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_jump_end_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_jump_end_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_jump_end_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_jump_end_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>

            <!--主题风格-->
            <RelativeLayout
                android:id="@+id/play_setting_content_theme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_65"
                android:layout_below="@+id/play_setting_content_jump_end"
                android:layout_marginLeft="@dimen/sm_32"
                android:layout_marginRight="@dimen/sm_32"
                android:background="@drawable/selector_seetting_play_item_bg"
                android:focusable="true"
                android:gravity="center_vertical"
                android:nextFocusLeft="@+id/play_setting_content_theme"
                android:paddingBottom="@dimen/sm_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sm_16"
                    android:text="@string/theme_style"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_theme_right_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sm_16"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_right_arrows_n" />

                <TextView
                    android:id="@+id/play_setting_content_theme_text"
                    android:layout_width="@dimen/sm_106"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_theme_right_arrows"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sm_24" />

                <ImageButton
                    android:id="@+id/play_setting_content_theme_left_arrows"
                    android:layout_width="@dimen/sm_30"
                    android:layout_height="@dimen/sm_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_setting_content_theme_text"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/select_left_arrows_n" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
