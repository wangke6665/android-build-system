<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wellco"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="神马视频 APP 用户协议"
        android:textColor="#BF0E49"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="欢迎您使用神马视频 APP！在使用本 APP 之前，请您仔细阅读本用户协议（以下简称 “本协议”）。本协议包含了您使用本 APP 时的权利和义务，以及我们的责任和声明。您使用本 APP 即视为您已阅读、理解并同意接受本协议的约束。"
        android:textColor="#171616"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_marginLeft="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="详细点击这里"
        android:textColor="#0730C7"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonDisagree"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="unegree"
            android:text="不同意"
            android:textColor="#fff"
            android:background="@drawable/rounded_button" /> <!-- 添加这一行 -->

        <Button
            android:id="@+id/buttonAgree"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="agree"
            android:text="同   意"
            android:textColor="#fff"
            android:background="@drawable/rounded_button" /> <!-- 添加这一行 -->
    </LinearLayout>

</RelativeLayout>