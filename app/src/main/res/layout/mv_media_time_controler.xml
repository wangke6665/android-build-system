<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/media_controler_background">

    <TextView
        android:id="@+id/tv_mv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sm_30"
        android:layout_marginTop="@dimen/sm_5"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="1"
        android:maxWidth="@dimen/sm_500"
        android:singleLine="true"
        android:textSize="@dimen/sm_32" />

    <!--视频分辨率显示（全屏模式下显示在标题后面）-->
    <TextView
        android:id="@+id/tv_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_mv_name"
        android:layout_marginLeft="@dimen/sm_15"
        android:layout_marginTop="@dimen/sm_5"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sm_22"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/sm_5"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/sm_20"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="@dimen/sm_32"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>