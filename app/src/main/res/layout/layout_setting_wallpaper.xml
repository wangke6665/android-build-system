<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/video_details_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/sm_89">

        <!--<ImageView
            android:layout_width="@dimen/sm_220"
            android:layout_height="@dimen/sm_80"
            android:layout_marginLeft="@dimen/sm_16"
            android:src="@drawable/gexingshezhi" />-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sm_12"
            android:paddingTop="@dimen/sm_16"
            android:paddingRight="@dimen/sm_35">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sm_2"
                android:text="@string/image_cache"
                android:textColor="@color/white"
                android:textSize="@dimen/sm_46"/>

            <ImageView
                android:layout_width="@dimen/sm_10"
                android:layout_height="@dimen/sm_70"
                android:layout_marginLeft="@dimen/sm_10"
                android:src="@drawable/vod_line35" />
        </LinearLayout>

        <GridView
            android:id="@+id/wallpaper_gv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sm_90"
            android:layout_marginBottom="@dimen/sm_6"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:paddingTop="@dimen/sm_13"
            android:scrollbars="none"
            android:smoothScrollbar="true"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/sm_5" />
    </LinearLayout>
</FrameLayout>
